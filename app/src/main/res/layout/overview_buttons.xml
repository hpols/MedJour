<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/main_entry_bt"
            style="@style/bgColor_bt"
            android:layout_marginBottom="@dimen/std_space"
            android:layout_marginTop="16dp"
            android:text="@string/main_entry_bt"
            app:layout_constraintBottom_toTopOf="@+id/main_journal_bt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/main_journal_bt"
            style="@style/bgColor_bt"
            android:layout_marginBottom="16dp"
            android:text="@string/main_journal_bt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_entry_bt" />
    </android.support.constraint.ConstraintLayout>
</layout>